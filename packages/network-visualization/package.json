{
  "name": "@acdh/network-visualization",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acdh-oeaw/network-visualization.git"
  },
  "bugs": {
    "url": "https://github.com/acdh-oeaw/network-visualization/issues"
  },
  "homepage": "https://github.com/acdh-oeaw/network-visualization#readme",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./network-visualization.css": "./src/network-visualization.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "build:watch": "pnpm run build --watch",
    "lint": "eslint . --cache --ignore-path .gitignore",
    "lint:fix": "pnpm run lint --fix",
    "prepublishOnly": "rimraf dist && pnpm run build",
    "typecheck": "tsc --noEmit -p ./tsconfig.json",
    "validate": "pnpm run lint && pnpm run typecheck"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.6",
    "@stefanprobst/assert": "^1.0.3",
    "force-graph": "^1.42.9",
    "graphology": "^0.24.1",
    "graphology-types": "^0.24.4"
  },
  "devDependencies": {
    "@stefanprobst/stylelint-config": "^2.3.0",
    "@types/react": "^18.0.14",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.1.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "react": "^18.2.0",
    "rimraf": "^3.0.2",
    "stylelint": "^14.9.1",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "react": ">=16.14.0"
  },
  "eslintConfig": {
    "root": true,
    "reportUnusedDisableDirectives": true,
    "extends": [
      "eslint:recommended",
      "plugin:import/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "simple-import-sort",
      "import"
    ],
    "parserOptions": {
      "project": [
        "./packages/*/tsconfig.json"
      ]
    },
    "rules": {
      "@typescript-eslint/consistent-type-exports": "error",
      "@typescript-eslint/consistent-type-imports": "error",
      "@typescript-eslint/explicit-function-return-type": "error",
      "@typescript-eslint/explicit-module-boundary-types": "error",
      "@typescript-eslint/sort-type-union-intersection-members": "error",
      "import/first": "error",
      "import/newline-after-import": "error",
      "import/no-duplicates": "error",
      "simple-import-sort/exports": "error",
      "simple-import-sort/imports": "error"
    },
    "settings": {
      "import/parsers": {
        "@typescript-eslint/parser": [
          ".ts",
          ".tsx"
        ]
      },
      "import/resolver": {
        "typescript": {
          "alwaysTryTypes": true,
          "project": [
            "./packages/*/tsconfig.json"
          ]
        }
      }
    }
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "eslint --cache --fix",
      "prettier --cache --write"
    ],
    "*.@(css|json|md)": "prettier --cache --write"
  }
}
